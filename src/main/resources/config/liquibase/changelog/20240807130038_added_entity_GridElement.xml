    <!--
        Added the entity GridElement.
    -->
    <changeSet id="20240807130038-1" author="jhipster">
        <createTable tableName="grid_element">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="x" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="y" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="w" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="h" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="channel" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="renderer" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="content" type="text">
                <constraints nullable="true" />
            </column>
            <column name="display_after_millis" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="display_duration_millis" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="layout_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="grid_element_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
